#Волшебный шар предсказаний
hello = [ #массив  с приветствиями
    "Я тебя понял,сейчас подумаю..",
    "Хмм..Сложный вопрос",
    "Я знаю,что тебе посоветовать"
]
bye = [ #массив  с прощанием
    "Еще вопрос?",
    "Задай еще что-нибудь",
    "На сегодня это все?"
]
answers = [ #массив  вариантов ответа
    #положительные
    "Конечно",
    "Я в тебе уверен",
    "Ты все сможешь",
    #нейтральные
    "Даже и не знаю",
    "Нужно подумат",
    "Я не уверен",
    #отрицательные
    "Даже не думай",
    "Конечно же нет",
    "Ни в коем случае"
]
puts hello.sample #выбираем случайный ответ из массива приветствий
puts #создаем пустой puts для пустого места между ответами
puts answers.sample # случайный вариант ответа
puts
puts bye.sample # случайное прощание
